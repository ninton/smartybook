{
    "name": "ninton/smartybook",
    "description": "Smarty動的Webサイト構築入門のCDROM",
    "type": "project",
    "config": {
        "vendor-dir": "smartybook/vendor",
        "platform": {
            "php": "5.3.8"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:ninton/smartybook.git"
        }
    ],
    "require": {
        "php": "=5.3.8",
        "ext-json": "*",
        "ext-PDO": "*",
        "ext-mbstring": "*",
        "smarty/smarty": "v2.6.31"
    },
    "authors": [
        {
            "name": "aoki.makoto",
            "email": "aoki_makoto@ninton.co.jp"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "3.5.0",
        "friendsofphp/php-cs-fixer": "v2.16.0"
    },
    "scripts": {
        "dry-fix": [
            "php-cs-fixer fix --dry-run --diff --config=.php_cs.dist"
        ],
        "fix": [
            "php-cs-fixer fix --config=.php_cs.dist"
        ]
    }
}
